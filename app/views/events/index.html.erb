<% title t(".party_headline") %>
<% content_for "page-attributes" do %>id="eventsPage"<% end %>
<% content_for :header do %>
<h1><%= t ".party_headline" %></h1>
<% end %>

<div id="events_list" class="row-fluid">
	
	<% @parties.each do |event| # custom events in our db %>
			<div class="well span4">
				<h4><%= event.name %></h3>
				<h6><%= l event.start_time %></h6>
				<h5><%= t ".where" %>: <%= event.location %></h5>
			  <% if !event.facebook_url.blank? %>
				<p style="margin-top: 3px;"><a class="btn btn-small btn-info" href="<%= event.facebook_url %>" data-role="button" target="_blank"><%= t '.view_on_facebook' %></a></p>
			  <% elsif !event.other_url.blank? %>
				<p style="margin-top: 3px;"><a class="btn btn-small btn-info" href="<%= event.other_url %>" data-role="button" target="_blank"><%= t '.view_more' %></a></p>
			  <% end %>
			</div>
	<% end %>
	
	
<% @events.each do |event| #facebook events %>
	<% if event["attendees"] %>
		<div class="well span4">
			<h4><%= event["name"] %></h3>
			<h6><%= l event["start_time"] %></h6>
			<h5><%= t ".where" %>: <%= event["location"] %></h5>
			<h5><%= t ".attendees_on_facebook" %>: <span class="badge badge-info"><%= event["attendees"] %>+</span></h5>
			<p style="margin-top: 3px;"><a class="btn btn-small btn-info" href="<%= event["link"] %>" data-role="button" target="_blank"><%= t '.view_on_facebook' %></a></p>
		</div>
	<% end %>
<% end %>
</div>

<p class="source-info">
	<%= t "source" %>: <a target="_blank" href="http://asta.uni-paderborn.de/aktive/unipartys/">AStA UPB: Unipartys</a>, <a target="_blank" href="https://www.facebook.com/uniparty.pb">Unipartys in Paderborn</a>.
</p>
