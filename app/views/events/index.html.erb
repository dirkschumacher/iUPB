<%= content_for "page-attributes" do %>id="eventsPage"<% end %>
<% content_for :header do %>
<h1><%= t ".party_headline" %></h1>
<% end %>

<div id="events_list" class="row-fluid">
<% @events.each do |event| %>
	<% if event["attendees"] %>
		<div class="well span4">
			<h4><%= event["name"] %></h3>
			<h6><%= l event["start_time"] %></h6>
			<h5><%= t ".where" %>: <%= event["location"] %></h5>
			<h5><%= t ".attendees_on_facebook" %>: <span class="badge badge-info"><%= event["attendees"] %>+</span></h5>
			<p><a class="btn btn-small btn-info" href="<%= event["link"] %>" data-role="button" target="_blank"><%= t '.view_on_facebook' %></a></p>
		</div>
	<% end %>
<% end %>
</div>

<p class="source-info">
	Quelle: <a target="_blank" href="https://www.facebook.com/uniparty.pb">Unipartys in Paderborn</a>.
</p>
