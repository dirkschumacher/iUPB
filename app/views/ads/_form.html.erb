<h2><%= t ".new_entry" %></h2>
<% if @ad.errors.any? %>
  <div id="error_explanation">
    <h5>Oops:</h5>
    <ul>
    <% @ad.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<%= form_for @ad do |f| %>
  <label for="ad_name">Name:</label> <%= f.text_field :name %>
  <label for="ad_email">Email:</label> <%= f.email_field :email %>
<label for="ad_text"><%= t ".text" %>:</label>
<%= f.text_area :text %>
<br>
  <%= f.submit t(".save_button"), :class => "btn btn-primary" %>
<% end %>