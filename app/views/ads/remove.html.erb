<h1><%= link_to '<i class="icon-arrow-left"></i>'.html_safe, ads_path, id: "back-button"  %> <%= t ".title" %>:</h1>
<% if @ad %>
<h2><%= link_to @ad.title, @ad %></h2>
<p class="center"><%= link_to ('<button class="btn btn-danger btn-large">' + t(".button_delete") + '</button>').html_safe, ad_path(@ad, admin_token: @ad.admin_token), method: :delete, id: "delete-button" %></p>
<% else %>
<p class="center notice"><%= t ".ad_notfound" %></p>
<% end %>