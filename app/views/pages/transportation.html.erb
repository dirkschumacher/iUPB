<% title t("layouts.application.buses") %>
<%= content_for "page-attributes" do %>id="transportPage"<% end %>
<% content_for :header do %>
<h1><%= t "layouts.application.buses" %> <a href="#" id="reload-button"><i class="icon-refresh"></i></a></h1>
<% end %>
<% content_for :javascript do %>
<script>
$(document).ready(function() {
  var transportationManager = new TransportationManager($('#bus_data_list'), $('#bus-all'));
  transportationManager.load_buses();
  $("#reload-button").click(function(e){
    transportationManager.load_buses();
	e.preventDefault();
  });
  var autoReload = window.setInterval(transportationManager.load_buses, 60*1000);
});
</script>
<% end %>
