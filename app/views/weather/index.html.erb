
<% content_for :header do %>
<h1><%= t ".current_wheater "%></h1>
<% end %>
<ul class="nav nav-tabs nav-stacked">
	<li><h3><%= t ".temperature" %> <%= number_with_delimiter @weatherData['temp']  %>째 C</h3></li>
	<li><h3><%= t ".min" %>.  <%= t ".temperature" %> <%= number_with_delimiter @weatherData['tempmin'] %>째 C</h3></li>
	<li><h3><%= t ".max" %>. <%= t ".temperature" %> <%= number_with_delimiter @weatherData['tempmax'] %>째 C</h3></li>
	<li><h3><%= t ".sunrise" %> <%= @weatherData['sonnenaufgang'] %></h3></li>
	<li><h3><%= t ".sunset" %> <%= @weatherData['sonnenuntergang'] %></h3></li>
	<li><h3><%= t ".forecast" %> <%= number_with_delimiter @forecast['city']['forecast'][Time.now.strftime("%Y-%m-%d")]['tx'] %>째 C / <%= @forecast['city']['forecast'][Time.now.strftime("%Y-%m-%d")]['w_txt'] %></h3></li>
</ul>
<footer>
	Aktuelle Daten: Wetterstation Uni Paderborn. Vorhersage: <a href="http://www.wetter.com/">wetter.com</a>.
</footer>
